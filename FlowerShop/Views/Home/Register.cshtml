
@{
    ViewBag.Title = "Home";

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Flower Shop Home Page</title>
    <link rel="stylesheet" href="../../Content/projectonestyle.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9a825;
        }

        #registration-form {
            width: %100;
            margin: auto;
            padding: 20px;
        }
        
        label, input {
            display: block;
            margin: 5px 0;
        }

            input[type="text"], input[type="email"], input[type="password"], select {
                width: 100%;
                padding: 8px;
            }
        label {
            color: #a90000;
        }

        #results{
            display: none;
        }
        #loadscreen {
            grid-template-columns: auto auto;
            text-align: center;
            background-color: white;
            border: solid;
            border-width: 5px;
            border-color: #a90000;
            padding: 20px;
            display: none;
        }
        #register-title {
            color: #a90000;
            font-size: 22px;
            margin-bottom: 10px;
            border-bottom: 2px solid black;
            padding-bottom: 5px;
            grid-area: column-left;
        }
    </style>
</head>
<body>
    <div class="page-body">
        <header class="background-image">
        </header>

        <div class="nav" style="display: flex; justify-content: right; flex-wrap: wrap;">
            <p class="nav-bar">
                <a href="http://localhost:51403/Home/Register" style="text-decoration: underline;">Register</a>
                <a href="http://localhost:51403/Home/Contact" style="text-decoration: underline;">Contact Us</a>
                <a href="http://localhost:51403/Home/Legal" style="text-decoration: underline;">Legal</a>
                <a href="http://localhost:51403/Home/AboutUs" style="text-decoration: underline;">About Us</a>
                <a href="http://localhost:51403/Home/ProjectOne" style="text-decoration: underline;">Home</a>
            </p>
        </div>

        <div class="container" style=" display: grid; grid-template-columns: auto auto; grid-gap: 20px; margin-top: 20px; ">
            <div class="left-column">

                <div id="register-title"><strong>@ViewBag.Message</strong></div>
                <div id="registration-form" style="width: %100; margin: auto; padding: 20px; ">
                    <div id="three-row" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 0px; margin: 0px 0;">
                        <div>
                            <label for="first-name">First Name</label>
                            <input type="text" id="first-name">
                        </div>
                        <div>
                            <label for="middle-name">Middle Name</label>
                            <input type="text" id="middle-name">
                        </div>
                        <div>
                            <label for="last-name">Last Name</label>
                            <input type="text" id="last-name">
                        </div>
                        <div>
                            <label for="email">Email Address</label>
                            <input type="email" id="email">
                        </div>
                        <div>
                            <label for="confirm-email">Confirm Email</label>
                            <input type="email" id="confirm-email">
                        </div>
                        <div>
                            <label for="password">Password</label>
                            <input type="password" id="password">
                        </div>
                    </div>
                    <div id="four-row" style=" display: grid; grid-template-columns: repeat(4, 1fr); gap: 0px; margin: 0px 0;">
                        <div>
                            <label for="address">Street Address</label>
                            <input type="text" id="address">
                        </div>
                        <div>
                            <label for="city">City</label>
                            <input type="text" id="city">
                        </div>
                        <div>
                            <label for="state">State</label>
                            <select id="state">
                                <option> </option>
                                <option>WI</option>
                                <option>CA</option>
                                <option>MI</option>
                                <option>AK</option>
                                <option>AL</option>
                                <option>AR</option>
                                <option>AZ</option>
                                <option>CA</option>
                                <option>CO</option>
                                <option>CT</option>
                                <option>DE</option>
                                <option>FL</option>
                                <option>GA</option>
                                <option>HI</option>
                                <option>ID</option>
                                <option>IL</option>
                                <option>IN</option>
                                <option>IA</option>
                                <option>KS</option>
                                <option>KY</option>
                                <option>LA</option>
                                <option>ME</option>
                                <option>MD</option>
                                <option>MA</option>
                                <option>MN</option>
                                <option>MS</option>
                                <option>MO</option>
                                <option>MT</option>
                            </select>
                        </div>
                        <div>
                            <label for="zip">Zip</label>
                            <input type="text" id="zip">
                        </div>
                    </div>
                    <div id="two-row" style="display: grid; grid-template-columns: repeat(2, 1fr); gap: 0px; margin: 0px 0;">
                        <div>
                            <label for="secret-question">Secret Question</label>
                            <input type="text" id="secret-question">
                        </div>
                        <div>
                            <label for="secret-answer">Secret Answer</label>
                            <input type="text" id="secret-answer">
                        </div>
                    </div>
                    <div style=" display: flex; justify-content: right; flex-wrap: wrap;">
                        <button class="button" id="reset-btn" style="color: #a90000;">Reset</button>
                        <button class="button" id="save-btn" style="color: #a90000;">Save</button>
                    </div>
                </div>


                    <div id="loadscreen">
                        <img src="../images/ajax_pleasewait.gif" alt="Loading" style="display: flex; justify-content: left; flex-wrap: wrap;">
                        <p>Please Wait..Saving Data..</p>
                        
                    </div>
                    <div id="results">
                        <p id="message"></p>
                    </div>



                </div>
            <div class="right-column" style="height: 50px;">
                <div class="search-display">
                    <p>Please join us on <a href="https://www.facebook.com/login/?next=https%3A%2F%2Fwww.facebook.com%2F" style="color: darkred;">Facebook</a> for news and deals!</p>
                </div>
            </div>
        </div>


    </div>


    <div class="footer">
        <a href="http://localhost:51403/Home/Contact">Contact Us</a>
    </div>
    <script>
        $(document).ready(function () {
            //this function is used to display the values which where given to us through the registration form
            $("#save-btn").click(function () {
                //hide is used to hide both the register-title and the registration-form
                $("#register-title").hide();
                $("#registration-form").hide();
                //show then displays the loadscreen 
                $("#loadscreen").show();
                //setTimeout function is used to display the following message when the 10 seconds end
                setTimeout(function () {
                    $("#loadscreen").hide();
                    //message is the place where we display the informaiton from the registration form
                    $("#message").html("Welcome to our Flower Shop, <b>" + $("#first-name").val() + " " + $("#last-name").val() + "</b><br>"
                        + $("#address").val() + "<br>" + $("#city").val() + ", " + $("#state").val() + " " + $("#zip").val() + "<br>"
                        + $("#email").val() + "<br>Your information has been received. THANK YOU!");
                    $("#results").show();
                    //100000 is used to delay the action for 10 seconds
                }, 10000); 
            });
             //this function is used to set all items ids within the registration form back into there original values
            $("#reset-btn").click(function () {
                $("#first-name").val("");
                $("#middle-name").val("");
                $("#last-name").val("");
                $("#email").val("");
                $("#confirm-email").val("");
                $("#password").val("");
                $("#address").val("");
                $("#city").val("");
                $("#state").val(""); 
                $("#zip").val("");
                $("#secret-question").val("");
                $("#secret-answer").val("");
            });

        });
        //have this here in cause both of the loadscreen and the reults show before the search button is clicked
        $("loadscreen").hide();
        $("results").hide();
    </script>
</body>
</html>


