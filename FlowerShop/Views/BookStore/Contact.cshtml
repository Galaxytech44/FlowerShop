        }
        //save-btn button function is used to show the submit-screen when the form is submited and hides the form
        $("#save-btn").click(function (e) {
            e.preventDefault(); 
            if (validateForm()) {
                $('#submit-screen').show();
                $('#form').hide();
            }
        });
    });
    </script>
</body>
</html>


